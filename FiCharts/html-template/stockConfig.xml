 <config precision="2" title="数据缩放" subTitle='鼠标滚动缩放，拖拽查看，背景双击全屏'>
   <!--tooltip>
   	<label><![CDATA[日期:${xValue}{formatDate:YYYYMMDD,YYYY-MM-DD}<br>数值:${yLabel}]]></label>
   </tooltip-->
   <axis>
     <x title="A" type="field" input="YYYYMMDD"/> 
     <y title="B" type="linear"/> 
   </axis>
   <legend enable="false"/>
   <series>
     <area name="a" xField="label" yField="value"/> 
     <line name="b" xField="label" yField="valueB"/> 
   </series>
   <dataScale enable='true'/> 
   <dataBar>
   		<states>
            <normal>
            	<border color="CCCCCC"/>
                <fill color='EEEEEE'/>
            </normal>
            <hover>
            	<border color="CCCCCC"/>
                <fill color='DDDDDD'/>
            </hover>
            <down>
            	<border color="CCCCCC"/>
                <fill color='EEEEEE'/>
            </down>
        </states>
   </dataBar>
 </config>